<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <div
        id="infobar"
        class="alert alert-success"
        role="alert"
        style="display: none"
      ></div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">登入</h5>
          <form name="form1" onsubmit="checkForm(); return false;" novalidate>
